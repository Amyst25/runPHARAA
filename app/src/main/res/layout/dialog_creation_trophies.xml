<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp">
        </View>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/trophy_one_track"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/lock" />

                <TextView
                    android:id="@+id/textOneCreation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="One track"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/trophy_two_tracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/lock" />

                <TextView
                    android:id="@+id/textTwoCreations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Two tracks"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/trophy_ten_tracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/lock" />

                <TextView
                    android:id="@+id/textTenCreations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ten tracks"
                    android:textAlignment="center" />
            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp">
        </View>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create tracks"
                android:textAlignment="center" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp">
        </View>


    </TableLayout>
</android.support.constraint.ConstraintLayout>